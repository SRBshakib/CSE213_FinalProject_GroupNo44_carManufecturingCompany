<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="Rifat.AssemblyManualController"
      prefWidth="800" prefHeight="600">

    <!-- Step description -->
    <Label text="Step 1: Attach Base">
        <VBox.margin>
            <Insets top="10" left="10" right="10" bottom="5"/>
        </VBox.margin>
    </Label>

    <!-- Image or diagram for step 1 -->
    <ImageView>
        <!-- Image source -->
    </ImageView>

    <!-- Text area for detailed instructions -->
    <TextArea prefWidth="400" prefHeight="150" editable="false">
        Attach the base to the bottom of the main body using screws. Make sure it is firmly secured.
    </TextArea>

    <!-- Next and previous buttons -->
    <HBox spacing="10">
        <Button text="Previous" onAction="#goToPreviousStep"/>
        <Button text="Next" onAction="#goToNextStep"/>
    </HBox>
</VBox>
