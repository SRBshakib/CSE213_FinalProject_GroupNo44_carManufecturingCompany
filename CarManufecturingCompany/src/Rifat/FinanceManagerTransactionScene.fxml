<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Rifat.FinanceManagerTransactionSceneController">
   <children>
      <Label layoutX="14.0" layoutY="14.0" text="Transaction Details" />
      <VBox layoutX="14.0" layoutY="42.0" spacing="10">
         <children>
            <HBox spacing="10">
               <Label text="Transaction ID:" />
               <TextField fx:id="transactionIdTextField" />
            </HBox>
            <HBox spacing="10">
               <Label text="Amount:" />
               <TextField fx:id="amountTextField" />
            </HBox>
            <HBox spacing="10">
               <Label text="Date:" />
               <TextField fx:id="dateTextField" />
            </HBox>
            <HBox spacing="10">
               <Button fx:id="submitButton" text="Submit" />
               <Button fx:id="cancelButton" text="Cancel" />
            </HBox>
         </children>
      </VBox>
      <Button layoutX="497.0" layoutY="13.0" onAction="#backButtonOnMouseClicked" text="Return" />
   </children>
</AnchorPane>
