<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane id="AnchorPane" prefHeight="621.0" prefWidth="881.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Rifat.ProductionManagerAssignTasksSceneController">
   <children>
      <AnchorPane layoutX="97.0" layoutY="7.0" prefHeight="598.0" prefWidth="647.0" style="-fx-background-color: white; -fx-border-color: black;">
         <children>
            <Label layoutX="20.0" layoutY="20.0" text="Assign Task to Assembly Line Worker" />
            <!-- Task details -->
            <Label layoutX="20.0" layoutY="60.0" text="Destination:" />
            <ComboBox fx:id="destinationComboBox" layoutX="140.0" layoutY="56.0" onAction="#destinationComboBoxAction" prefWidth="150.0" />
            <Label layoutX="20.0" layoutY="100.0" text="Starting Date:" />
            <DatePicker fx:id="startingDatePicker" layoutX="140.0" layoutY="96.0" onAction="#startingDatePickerAction" prefWidth="150.0" />
            <Label layoutX="20.0" layoutY="140.0" text="Ending Date:" />
            <DatePicker fx:id="endingDatePicker" layoutX="140.0" layoutY="136.0" onAction="#endingDatePickerAction" prefWidth="150.0" />
            <Label layoutX="20.0" layoutY="180.0" text="Car Model:" />
            <ComboBox fx:id="carModelComboBox" layoutX="140.0" layoutY="176.0" onAction="#carModelComboBoxAction" prefWidth="150.0" />
            <Label layoutX="20.0" layoutY="220.0" text="Car Type:" />
            <ComboBox fx:id="carTypeComboBox" layoutX="140.0" layoutY="216.0" onAction="#carTypeComboBoxAction" prefWidth="150.0" />
            <!-- TableView for displaying assigned tasks -->
            <TableView fx:id="assignedTaskTableView" layoutX="20.0" layoutY="260.0" prefHeight="300.0" prefWidth="600.0">
              <columns>
                <TableColumn fx:id="workerNameColumn" prefWidth="150.0" text="Worker Name" />
                <TableColumn fx:id="taskDetailsColumn" prefWidth="450.0" text="Task Details" />
              </columns>
            </TableView>
            <!-- Button to assign task -->
            <Button fx:id="assignTaskButton" layoutX="20.0" layoutY="580.0" mnemonicParsing="false" onAction="#assignTaskButtonOnMouseClicked" text="Assign Task" />
            <Button layoutX="555.0" layoutY="26.0" mnemonicParsing="false" onAction="#backButtonOnMouseClick" text="Return" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
