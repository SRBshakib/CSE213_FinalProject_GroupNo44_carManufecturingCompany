<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="400" prefWidth="600" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Rifat.FinancialReportSceneController">
    <children>
        <VBox alignment="TOP_CENTER" spacing="10" layoutX="50" layoutY="50">
            <Label text="Financial Report" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
            <Label text="Report Period:" />
            <Label text="From:" />
            <TextArea fx:id="fromDateTextArea" prefWidth="200" prefHeight="30" />
            <Label text="To:" />
            <TextArea fx:id="toDateTextArea" prefWidth="200" prefHeight="30" />
            <Label text="Summary:" />
            <TextArea fx:id="summaryTextArea" prefWidth="400" prefHeight="150" />
            <Label text="Recommendations:" />
            <TextArea fx:id="recommendationsTextArea" prefWidth="400" prefHeight="100" />
        </VBox>
    </children>
</AnchorPane>
