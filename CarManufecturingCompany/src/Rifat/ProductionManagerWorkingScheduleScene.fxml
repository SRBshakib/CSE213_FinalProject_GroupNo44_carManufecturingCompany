<?xml version="1.0" encoding="UTF-8"?>
import javafx.fxml.FXML;
import javafx.scene.control.Button;
import javafx.scene.control.DatePicker;
import javafx.scene.control.Label;
import javafx.scene.control.TableColumn;
import javafx.scene.control.TableView;
import javafx.scene.control.TimePicker;
import javafx.scene.layout.GridPane;
import javafx.scene.layout.HBox;
import javafx.scene.layout.VBox;


<GridPane fx:id="root" xmlns:fx="http://javafx.com/fxml/1" fx:controller=>
   <children>
      <VBox spacing="10.0">
         <children>
            <!-- Date Selection -->
            <HBox spacing="10.0">
               <children>
                  <Label text="Date:" />
                  <DatePicker fx:id="datePicker" />
               </children>
            </HBox>
            <!-- Start Time Selection -->
            <HBox spacing="10.0">
               <children>
                  <Label text="Start Time:" />
                  <TimePicker fx:id="startTimePicker" />
               </children>
            </HBox>
            <!-- End Time Selection -->
            <HBox spacing="10.0">
               <children>
                  <Label text="End Time:" />
                  <TimePicker fx:id="endTimePicker" />
               </children>
            </HBox>
            <!-- Workers Table -->
            <HBox spacing="10.0">
               <children>
                  <Label text="Workers:" />
                  <TableView fx:id="workersTable" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn text="Name" fx:id="nameColumn" />
                        <TableColumn text="Role" fx:id="roleColumn" />
                     </columns>
                  </TableView>
               </children>
            </HBox>
            <!-- Save Button -->
            <HBox spacing="10.0">
               <children>
                  <Button fx:id="saveButton" text="Save" onAction="#onSaveButtonClicked" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</GridPane>


